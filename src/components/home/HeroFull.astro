---
import { Image } from "astro:assets";
import HeroImage from "../../assets/images/sections/wizual2.png";
---

<section class="flex items-center justify-center pt-28">

    <div class="relative w-full flex flex-col items-center justify-start overflow-hidden">
        
        <div class="relative z-20 pointer-events-none">
            <h1 class="text-[18vw] md:text-[9rem] lg:text-[12rem] xl:text-[17rem] text-center tracking-tighter text-black uppercase split-chars">
                Mooneso
            </h1>
            <p class="font-decorative text-[#C5A47E] text-[9vw] md:text-[5rem] lg:text-[6rem] xl:text-[9rem] absolute top-1/2 right-0 translate-y-6 split-letters">
                Furniture design
            </p>
        </div>

        <div class="relative w-full -mt-10 md:-mt-20 z-10 overflow-hidden shadow-2xl">
            <div class="absolute w-full z-50">
                <svg width="100%" viewBox="0 0 1299 619" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M0 0H701.5H1299C1299 0 1299 716 1299 607C1299 498 1198 0 652 0C106 0 0 497 0 607C0 717 0 0 0 0Z" fill="#E5E4E0"/>
                </svg>
            </div> 

            <div class="reveal reveal--top">
                <div class="parallax-wrap">
                    <Image
                      src={HeroImage}
                      alt="Bedroom Furniture"
                      class="w-full aspect-[8/10] md:aspect-[12/10] object-cover"
                      widths={[720, 960, 1280, 1600]}
                      sizes="100vw"
                      loading="eager"
                      fetchpriority="high"
                      decoding="async"
                    />
                </div>
            </div>

            <div class="absolute inset-0 flex flex-col justify-end p-6 md:p-12 text-white">
                
                <div class="absolute top-[35%] md:top-[50%] left-[25px] md:left-[25%]">
                    <div class="relative max-w-md space-y-6">
                        <div class="w-4 h-4 border border-white rounded-full">
                           <div class="w-1.5 h-1.5 my-1 mx-1 bg-white rounded-full"></div>
                        </div>
                        <span class="block text-2xl uppercase tracking-widest">Łóżko North</span>
                        <p class="leading-relaxed font-light opacity-90">
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nibh euismod et a dapibus. Sed mauris facilisi vitae lorem aenean metus.
                        </p>
                        
                        <a href="#" class="group flex items-center gap-4 text-[14px] tracking-[0.2em] uppercase font-medium">
                            <span class="border-b border-transparent group-hover:border-white transition-all">Zobacz</span>
                            <div class="relative flex items-center justify-center w-16 h-16 border border-white/40 rounded-full group-hover:bg-white group-hover:text-black transition-all">
                                <span class="text-2xl">→</span>
                            </div>
                        </a>
                    </div>
                </div>

                <div class="flex justify-center gap-2">
                    <span class="w-1.5 h-1.5 bg-white rounded-full"></span>
                    <span class="w-1 h-1 bg-white/40 rounded-full"></span>
                    <span class="w-1 h-1 bg-white/40 rounded-full"></span>
                    <span class="w-1 h-1 bg-white/40 rounded-full"></span>
                </div>
            </div>
        </div>
    </div>

</section>
