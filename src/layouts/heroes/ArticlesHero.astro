---
const { title, lead, tags, date, readingTimeMinutes } = Astro.props;
const formattedDate = date ? new Date(date).toLocaleDateString('pl-PL', {
  year: 'numeric',
  month: '2-digit',
  day: '2-digit'
}) : null;
const readingTime = Number.isFinite(readingTimeMinutes) ? Math.max(1, Number(readingTimeMinutes)) : null;
const readingTimeLabel = readingTime
  ? `${readingTime} ${readingTime === 1 ? "minuta" : (readingTime >= 2 && readingTime <= 4 ? "minuty" : "minut")} czytania`
  : null;
---

 
<section class="relative pt-24 pb-0 md:pt-34 md:pb-8">
  <div class="pointer-events-none absolute inset-y-0 left-1/2 w-screen -translate-x-1/2 bg-gray-50"></div>
        
  <div class="grid gap-4 md:gap-10 lg:grid-cols-[250px_minmax(0,1fr)_280px]">
  <div></div>
  <div>
    <div class="relative space-y-4 mx-auto">
        <div class="text-[8px] md:text-[10px] uppercase tracking-[0.1em] text-gray-400 mb-3 md:mb-6 font-semibold">

          <svg class="inline-block mb-1.5" width="14" height="14" viewBox="0 0 42 42" fill="none" xmlns="http://www.w3.org/2000/svg">
<g clip-path="url(#clip0_4151_5)">
<path d="M21 5.6875L7 16.1875V37.1875H15.75V24.9375H26.25V37.1875H35V16.1875L21 5.6875Z" fill="#F4583C"/>
</g>
<defs>
<clipPath id="clip0_4151_5">
<rect width="42" height="42" fill="white"/>
</clipPath>
</defs>
</svg>

        <span class="text-gray"> Artykuły</span>
        <span class="text-[var(--accent)]"> • </span>
        <span class="text-gray"> {title}</span>
       </div>
    <h1 class="text-2xl sm:text-3xl/4 md:text-4xl lg:text-5xl font-semibold tracking-tight text-black">
      {title}
    </h1>
    <div class="flex flex-wrap gap-x-8 gap-y-2 pt-4 mt-4 md:pt-8 md:mt-8 border-t border-black/20 font-semibold text-[8px] md:text-[10px] tracking-[0.15em] uppercase">
    {tags && tags.length > 0 && (
      <div class="text-gray-400">
        <svg class="inline-block mb-1" width="14" height="14" viewBox="0 0 42 42" fill="none" xmlns="http://www.w3.org/2000/svg">
<g clip-path="url(#clip0_4151_8)">
<path d="M33.6 9.625H21L17.85 5.6875H8.4C6.6675 5.6875 5.26575 7.45937 5.26575 9.625L5.25 33.25C5.25 35.4156 6.6675 37.1875 8.4 37.1875H33.6C35.3325 37.1875 36.75 35.4156 36.75 33.25V13.5625C36.75 11.3969 35.3325 9.625 33.6 9.625ZM33.6 33.25H8.4V13.5625H33.6V33.25Z" fill="#F4583C"/>
</g>
<defs>
<clipPath id="clip0_4151_8">
<rect width="42" height="42" fill="white"/>
</clipPath>
</defs>
</svg>

      <span class="text-gray">{tags[0]}</span>
      </div>
    )}
    {formattedDate && ( 
      <div class="text-gray-400 hidden md:block">
<svg class="inline-block mb-1" width="14" height="14" viewBox="0 0 42 42" fill="none" xmlns="http://www.w3.org/2000/svg">
<g clip-path="url(#clip0_4151_2)">
<path d="M15.75 19.9375H12.25V23.4375H15.75V19.9375ZM22.75 19.9375H19.25V23.4375H22.75V19.9375ZM29.75 19.9375H26.25V23.4375H29.75V19.9375ZM33.25 7.6875H31.5V4.1875H28V7.6875H14V4.1875H10.5V7.6875H8.75C6.8075 7.6875 5.2675 9.2625 5.2675 11.1875L5.25 35.6875C5.25 37.6125 6.8075 39.1875 8.75 39.1875H33.25C35.175 39.1875 36.75 37.6125 36.75 35.6875V11.1875C36.75 9.2625 35.175 7.6875 33.25 7.6875ZM33.25 35.6875H8.75V16.4375H33.25V35.6875Z" fill="#F4583C"/>
</g>
<defs>
<clipPath id="clip0_4151_2">
<rect width="42" height="42" fill="white"/>
</clipPath>
</defs>
</svg>


       <span class="text-gray">{formattedDate}</span>
      </div>
    )}

    {readingTimeLabel ? (
      <div class="text-gray-400">
        <svg class="inline-block mb-1" width="14" height="14" viewBox="0 0 42 42" fill="none" xmlns="http://www.w3.org/2000/svg">
<g clip-path="url(#clip0_4154_2)">
<path d="M19.25 29.75C19.25 30.7125 20.0375 31.5 21 31.5C21.9625 31.5 22.75 30.7125 22.75 29.75C22.75 28.7875 21.9625 28 21 28C20.0375 28 19.25 28.7875 19.25 29.75ZM19.25 5.25V12.25H22.75V8.89C28.6825 9.7475 33.25 14.8225 33.25 21C33.25 27.7725 27.7725 33.25 21 33.25C14.2275 33.25 8.75 27.7725 8.75 21C8.75 18.06 9.7825 15.365 11.515 13.265L21 22.75L23.4675 20.2825L11.5675 8.3825V8.4175C7.735 11.2875 5.25 15.8375 5.25 21C5.25 29.6975 12.285 36.75 21 36.75C29.6975 36.75 36.75 29.6975 36.75 21C36.75 12.3025 29.6975 5.25 21 5.25H19.25ZM31.5 21C31.5 20.0375 30.7125 19.25 29.75 19.25C28.7875 19.25 28 20.0375 28 21C28 21.9625 28.7875 22.75 29.75 22.75C30.7125 22.75 31.5 21.9625 31.5 21ZM10.5 21C10.5 21.9625 11.2875 22.75 12.25 22.75C13.2125 22.75 14 21.9625 14 21C14 20.0375 13.2125 19.25 12.25 19.25C11.2875 19.25 10.5 20.0375 10.5 21Z" fill="#F4583C"/>
</g>
<defs>
<clipPath id="clip0_4154_2">
<rect width="42" height="42" fill="white"/>
</clipPath>
</defs>
</svg>
{readingTimeLabel}
      </div>
    ) : null}

    </div>
    </div>
  </div>
  <div></div>
</div>
</div>

</section>
